            <input type="file" id="avt-update" asp-for="general.Avatar">
            <div class="avartar">
                <img src="@(string.IsNullOrEmpty(Model.general?.Avatar)?"/images/Avatar/default_avt.jfif":Model.general?.Avatar)" alt="avatar" srcset="">
                <span>
                    <img src="/images/icons8_camera.svg" alt="" srcset="">
                </span>
            </div>
            <div class="info">
                @if (Model.profile != null)
                {
                    <nav><strong>Full Name:</strong> @Model.profile?.FirstName @Model.profile.LastName</nav>
                    <nav><strong>Birthday:</strong> @Model.profile?.DoB.ToShortDateString() <strong>Gender:</strong> @(Model.profile.Gender && true ? "Male" : "Female")</nav>
                    <nav><strong>Phone Number:</strong> @Model.profile?.PhoneNumber</nav>
                    <nav><strong>Address:</strong> @Model.profile?.Address</nav>
                    @if (!string.IsNullOrEmpty(Model.profile?.SocialNetwork))
                    {
                        <nav><strong>Contact:</strong> @Model.profile?.SocialNetwork</nav>
                    }
                }
            </div>
        </div>
    </section>
    @{
        await Html.RenderPartialAsync("_General.cshtml", Model.general);
    }
    <section class="panel" id="content-activity">
        <section id="education">
            <!-- CONTENT NAVIGATION -->
            <div class="contentNavContainer">
                <div class="contenNavHeader">
                    <span class="navHeaderTitle">Education</span>
                    <div class="navHeaderButton" id="eduBtn">
                        <img src="/images/Add.svg" alt="Add navHeaderButton" />
                        <span>Add</span>
                    </div>
                </div>
                <div class="contentNavBody">
                    <ul class="contentItemList">
                        @if (Model.Educations != null)
                            @foreach (var item in Model.Educations)
                            {
                                <li class="contentItem" id="@item.Id">
                                    <div class="itemFirst">
                                        <img src="/images/Student hat.svg" alt="running icon" class="titleIcon" />
                                        <span class="titleName">@item.Name</span>

                                    </div>
                                    <div class="itemSecond">
                                        <span class="itemSubContent">GPA: @item.Gpa</span>
                                    </div>
                                    <div class="itemThird" iditem="@item.Id">
                                        <abbr title="Edit">
                                            <a asp-action="EditEducation" class="editContentNavAction">
                                                <img src="/images/Pen.svg" alt="pen icon"
                                                     class="actionIcon" />
                                            </a>
                                        </abbr>
                                        <abbr title="Delete">
                                            <img src="/images/icons8_trash 1.svg" alt="bin icon"
                                                 class="actionIcon delContent" onclick="deleteItem(`Education`, `@item.Id`)" />
                                        </abbr>
                                        <abbr title="View">
                                            <a asp-action="ViewEducation" class="viewContentNavAction">
                                                <img src="/images/Expand.svg" alt="expand icon"
                                                     class="actionIcon" />
                                            </a>
                                        </abbr>
                                    </div>
                                </li>
                            }
                        <!-- <li class="contentItem"></li> -->
                    </ul>
                </div>
            </div>
        </section>
        <section id="project">
            <!-- CONTENT NAVIGATION -->
            <div class="contentNavContainer">
                <div class="contenNavHeader">
                    <span class="navHeaderTitle">Project</span>
                    <div class="navHeaderButton" id="projectBtn">
                        <img src="/images/Add.svg" alt="Add navHeaderButton" />
                        <span>Add</span>
                    </div>
                </div>
                <div class="contentNavBody">
                    <ul class="contentItemList">
                        @if (Model.Projects != null)
                            @foreach (var item in Model.Projects)
                            {
                                <li class="contentItem" id="@item.Id">
                                    <div class="itemFirst">
                                        <img src="/images/FIle.svg" alt="running icon" class="titleIcon" />
                                        <span class="titleName">@item.Name</span>
                                    </div>

