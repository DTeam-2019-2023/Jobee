<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jobee</title>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <title>Home</title>
    <!-- import css -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <a href="/" rel="noopener noreferrer">
            <img src="/images/Logo.svg" alt="" srcset="" />
        </a>
        <div class="group-btn">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="bell active">
                    <img src="/images/Bell notification.svg" alt="" srcset="" />
                    <div class="notification">
                        <ul class="notify">
                            <li><a href="#">Your request verify have been in contain!</a></li>
                            <li><a href="#">Notify 2</a></li>
                        </ul>
                    </div>
                </div>
                <div class="popupSetting">
                    <a class="btn btn--hover" role="button" href="script:void(0)">Option</a>
                    <div class="dropdownSetting">
                        <ul>
                            <li><a href="#overlayAccoutSetting">Setting</a></li>
                            <li>
                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <button type="submit"
                                            style="flex-grow: 1;text-decoration: none;font-size: 16px;font-weight: bold;color:#000000;border: none;background: transparent;cursor: pointer;">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            }
            else
            {
                @if (!ViewData["Title"].Equals("Signup"))
                {
                    <a class="btn btn--simpButton center" role="button" asp-controller="Account" asp-action="Signup">Sign Up</a>
                }

                @if (!ViewData["Title"].Equals("Login"))
                {
                    <a class="btn btn--button" role="button" asp-controller="Account" asp-action="Login">Login</a>
                }
            }
        </div>
    </header>
    <div class="container">
        @RenderBody()
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>